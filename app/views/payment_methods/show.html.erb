<div class="container d-flex j-content-between mb-2">
  <div class="col-sm-4 text-left">
    <%= link_to 'Voltar', payment_methods_path,:class => "btn btn-warning" %>
  </div>

  <div class="col-sm-4">
    <h2><%= @payment_method.name %></h2>
  </div>

  <div class="col-sm-4 text-right">
    <%= link_to 'Editar', edit_payment_method_path, :class => "btn btn-secondary" %>

</div>


</div>
<div class="container">
  <div class="row mb-2">
    <div class="col-3 font-weight-bold">Icone:</div>
    <div class="col-9">
      <%if @payment_method.icon.attached? %>
        <%= image_tag(@payment_method.icon, alt: @payment_method.name, :size => "200x200") %>
      <%else%>
        Icone não cadastrado
      <%end%>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-3 font-weight-bold">Número máximo de parcelas:</div>
    <div class="col-9"><%= @payment_method.max_installments %></div>
  </div>
  <div class="row mb-2">
    <div class="col-3 font-weight-bold">Código:</div>
    <div class="col-9"><%= @payment_method.code %></div>
  </div>
  <div class="row mb-2">
    <div class="col-3 font-weight-bold">Status:</div>
    <div class="col-2"><%= @payment_method.status %></div>
    <div class="col-7">
      <% if @payment_method.active? %> 
        <%= link_to 'Desativar', disable_payment_method_path, method: :post, data: { confirm: "Confirma a operação?" }, :class => "btn btn-danger" %>
      <% else %>
        <%= link_to 'Ativar', activate_payment_method_path, method: :post, data: { confirm: "Confirma a operação?" }, :class => "btn btn-danger" %>
      <% end %>     
    </div>
  </div>
</div> 
