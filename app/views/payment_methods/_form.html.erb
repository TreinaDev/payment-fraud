<% if @payment_method.errors.any? %>
  <div>
    <p>Erro ao Salvar</p>
  </div>
<% end %>

<%= form_with model: @payment_method do |f| %>

  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :max_installments, 'Número Máximo de Parcelas' %>
    <%= f.number_field :max_installments %>
  </div>

  <div>
    <%= f.label :code, 'Código' %>
    <%= f.text_field :code %>
  </div>

  <%= f.submit 'Salvar' %>
<% end %>